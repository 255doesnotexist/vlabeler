{
  "name": "sort-entries",
  "version": 3,
  "type": "macro",
  "displayedName": "Reorder entries",
  "author": "sdercolin",
  "email": "sder.colin@gmail.com",
  "description": "Reorder all entries by entry name or sample name",
  "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/sort-entries",
  "supportedLabelFileExtension": "*",
  "parameters": {
    "list": [
      {
        "type": "boolean",
        "name": "descending",
        "label": "Descending order",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "name": "useTag",
        "label": "Sort by tag",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "name": "prioritizeTag",
        "label": "Sort by tag first",
        "visibleIf": "useTag",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "name": "prioritizeEntryName",
        "label": "Prioritize entry name over sample name",
        "defaultValue": false
      }
    ]
  },
  "scriptFiles": [
    "sort-entries.js"
  ]
}
