{
  "name": "sort-entries",
  "version": 5,
  "type": "macro",
  "displayedName": {
    "en": "Reorder entries",
    "zh": "重新排序条目"
  },
  "author": "sdercolin",
  "email": "sder.colin@gmail.com",
  "description": {
    "en": "Reorder all entries by entry name, sample name or tag",
    "zh": "根据条目名，采样名或标签来重新排序所有条目"
  },
  "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/sort-entries",
  "supportedLabelFileExtension": "*",
  "parameters": {
    "list": [
      {
        "type": "boolean",
        "name": "descending",
        "label": {
          "en": "Descending order",
          "zh": "降序排列"
        },
        "defaultValue": false
      },
      {
        "type": "boolean",
        "name": "useTag",
        "label": {
          "en": "Sort by tag",
          "zh": "根据标签排序"
        },
        "defaultValue": false
      },
      {
        "type": "boolean",
        "name": "prioritizeTag",
        "label": {
          "en": "Sort by tag first",
          "zh": "首先根据标签排序"
        },
        "enableIf": "useTag",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "name": "prioritizeEntryName",
        "label": {
          "en": "Prioritize entry name over sample name",
          "zh": "根据条目名 > 采样名的顺序排序"
        },
        "defaultValue": false
      }
    ]
  },
  "scriptFiles": [
    "sort-entries.js"
  ]
}
