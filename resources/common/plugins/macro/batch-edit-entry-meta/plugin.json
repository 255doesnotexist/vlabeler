{
  "name": "batch-edit-entry-meta",
  "version": 4,
  "type": "macro",
  "displayedName": {
    "en": "Batch edit entry notes",
    "zh": "批量编辑条目备注"
  },
  "author": "sdercolin",
  "email": "sder.colin@gmail.com",
  "description": {
    "en": "Edit the notes (starred, done, tag) of multiple entries at once.",
    "zh": "一次性编辑多个条目的备注（星标状态、完成状态、标签等）。"
  },
  "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/batch-edit-entry-meta",
  "supportedLabelFileExtension": "*",
  "parameters": {
    "list": [
      {
        "type": "entrySelector",
        "name": "selector",
        "label": "Entries to edit",
        "description": "Select the entries to edit. Leave blank to edit all entries.",
        "defaultValue": {
          "filters": []
        }
      },
      {
        "type": "enum",
        "name": "star",
        "label": "Set Starred",
        "defaultValue": "Do not change",
        "options": [
          "Do not change",
          "Starred",
          "Unstarred"
        ]
      },
      {
        "type": "enum",
        "name": "done",
        "label": "Set Done",
        "defaultValue": "Do not change",
        "options": [
          "Do not change",
          "Done",
          "Undone"
        ]
      },
      {
        "type": "boolean",
        "name": "tag",
        "label": "Set Tag",
        "defaultValue": false
      },
      {
        "type": "string",
        "name": "tagValue",
        "label": "Tag Value",
        "defaultValue": "",
        "optional": true,
        "description": "Leave blank to remove the tag.",
        "enableIf": "tag"
      }
    ]
  },
  "scriptFiles": [
    "batch-edit-entry-meta.js"
  ]
}
