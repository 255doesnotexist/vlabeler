{
  "name": "batch-edit-entry-meta",
  "version": 4,
  "type": "macro",
  "displayedName": {
    "en": "Batch edit entry notes",
    "zh": "批量编辑条目备注"
  },
  "author": "sdercolin",
  "email": "sder.colin@gmail.com",
  "description": {
    "en": "Edit the notes (starred, done, tag) of multiple entries at once.",
    "zh": "一次性编辑多个条目的备注（星标状态、完成状态、标签等）。"
  },
  "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/batch-edit-entry-meta",
  "supportedLabelFileExtension": "*",
  "parameters": {
    "list": [
      {
        "type": "entrySelector",
        "name": "selector",
        "label": {
          "en": "Entries to edit",
          "zh": "要编辑的条目"
        },
        "description": {
          "en": "Select the entries to edit. Leave blank to edit all entries.",
          "zh": "选择要编辑的条目。留空以编辑所有条目。"
        },
        "defaultValue": {
          "filters": []
        }
      },
      {
        "type": "enum",
        "name": "star",
        "label": {
          "en": "Set Starred",
          "zh": "设置星标状态"
        },
        "defaultValue": {
          "en": "Do not change",
          "zh": "不更改"
        },
        "options": [
          {
            "en": "Do not change",
            "zh": "不更改"
          },
          {
            "en": "Starred",
            "zh": "星标"
          },
          {
            "en": "Unstarred",
            "zh": "未星标"
          }
        ]
      },
      {
        "type": "enum",
        "name": "done",
        "label": {
          "en": "Set Done",
          "zh": "设置完成状态"
        },
        "defaultValue": {
          "en": "Do not change",
          "zh": "不更改"
        },
        "options": [
          {
            "en": "Do not change",
            "zh": "不更改"
          },
          {
            "en": "Done",
            "zh": "完成"
          },
          {
            "en": "Undone",
            "zh": "未完成"
          }
        ]
      },
      {
        "type": "boolean",
        "name": "tag",
        "label": {
          "en": "Set Tags",
          "zh": "设置标签"
        },
        "defaultValue": false
      },
      {
        "type": "string",
        "name": "tagValue",
        "label": {
          "en": "Tags",
          "zh": "标签"
        },
        "defaultValue": "",
        "optional": true,
        "description": {
          "en": "Leave blank to remove the tag.",
          "zh": "留空以删除标签。"
        },
        "enableIf": "tag"
      }
    ]
  },
  "scriptFiles": [
    "batch-edit-entry-meta.js"
  ]
}
