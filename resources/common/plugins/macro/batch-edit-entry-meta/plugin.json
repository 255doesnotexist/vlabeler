{
  "name": "batch-edit-entry-meta",
  "version": 5,
  "type": "macro",
  "displayedName": {
    "en": "Batch edit entry notes",
    "zh": "批量编辑条目备注",
    "ja": "エントリの備考を一括編集"
  },
  "author": "sdercolin",
  "email": "sder.colin@gmail.com",
  "description": {
    "en": "Edit the notes (starred, done, tag) of multiple entries at once.",
    "zh": "一次性编辑多个条目的备注（星标状态、完成状态、标签等）。",
    "ja": "複数のエントリの備考（スターマーク状態、完了状態、タグなど）を一括編集します。"
  },
  "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/batch-edit-entry-meta",
  "supportedLabelFileExtension": "*",
  "parameters": {
    "list": [
      {
        "type": "entrySelector",
        "name": "selector",
        "label": {
          "en": "Entry filters",
          "zh": "条目筛选器",
          "ja": "エントリフィルター"
        },
        "description": {
          "en": "Add filters to select the entries to edit. Leave blank to edit all entries.",
          "zh": "添加筛选器以选择要编辑的条目。留空以编辑所有条目。",
          "ja": "編集するエントリを選択するフィルターを追加してください。空にしておくことで、すべてのエントリを編集できます。"
        },
        "defaultValue": {
          "filters": []
        }
      },
      {
        "type": "enum",
        "name": "star",
        "label": {
          "en": "Set Starred",
          "zh": "设置星标状态",
          "ja": "スターマーク状態を設定"
        },
        "defaultValue": "keep",
        "options": [
          "keep",
          "on",
          "off"
        ],
        "optionDisplayedNames": [
          {
            "en": "Do not change",
            "zh": "不更改",
            "ja": "変更しない"
          },
          {
            "en": "Starred",
            "zh": "添加星标",
            "ja": "スターマークをつける"
          },
          {
            "en": "Unstarred",
            "zh": "移除星标",
            "ja": "スターマークを外す"
          }
        ]
      },
      {
        "type": "enum",
        "name": "done",
        "label": {
          "en": "Set Done",
          "zh": "设置完成状态",
          "ja": "完了状態を設定"
        },
        "defaultValue": "keep",
        "options": [
          "keep",
          "on",
          "off"
        ],
        "optionDisplayedNames": [
          {
            "en": "Do not change",
            "zh": "不更改",
            "ja": "変更しない"
          },
          {
            "en": "Done",
            "zh": "设为完成",
            "ja": "完了にする"
          },
          {
            "en": "Undone",
            "zh": "设为未完成",
            "ja": "未完了にする"
          }
        ]
      },
      {
        "type": "boolean",
        "name": "tag",
        "label": {
          "en": "Set Tag",
          "zh": "设置标签",
          "ja": "タグを設定"
        },
        "defaultValue": false
      },
      {
        "type": "string",
        "name": "tagValue",
        "label": {
          "en": "Tag",
          "zh": "标签",
          "ja": "タグ"
        },
        "defaultValue": "",
        "optional": true,
        "description": {
          "en": "Leave blank to remove the tag.",
          "zh": "留空以删除标签。",
          "ja": "空にしておくことで、タグを削除できます。"
        },
        "enableIf": "tag"
      }
    ]
  },
  "scriptFiles": [
    "batch-edit-entry-meta.js"
  ]
}
