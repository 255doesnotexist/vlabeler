{
  "name": "batch-edit-prefix-suffix",
  "version": 1,
  "type": "macro",
  "displayedName": {
    "en": "Batch edit entry prefix/suffix",
    "zh": "批量编辑条目前缀/后缀",
    "ja": "エントリーの接頭辞/接尾辞を一括編集"
  },
  "author": "sdercolin",
  "email": "sder.colin@gmail.com",
  "description": {
    "en": "Add or remove prefix/suffix to entry names in batch.",
    "zh": "批量对条目名添加或删除前缀/后缀。",
    "ja": "エントリ名の接頭辞/接尾辞を一括で追加または削除します。"
  },
  "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/batch-edit-prefix-suffix",
  "supportedLabelFileExtension": "*",
  "parameters": {
    "list": [
      {
        "type": "entrySelector",
        "name": "selector",
        "label": {
          "en": "Entry filters",
          "zh": "条目筛选器",
          "ja": "エントリフィルター"
        },
        "description": {
          "en": "Add filters to select the entries to edit. Leave blank to edit all entries.",
          "zh": "添加筛选器以选择要编辑的条目。留空以编辑所有条目。",
          "ja": "編集するエントリを選択するフィルターを追加してください。空にしておくことで、すべてのエントリを編集できます。"
        },
        "defaultValue": {
          "filters": []
        }
      },
      {
        "type": "enum",
        "name": "position",
        "label": {
          "en": "Position to process",
          "zh": "操作位置",
          "ja": "処理する位置"
        },
        "defaultValue": {
          "en": "Suffix",
          "zh": "后缀",
          "ja": "接尾辞"
        },
        "options": [
          {
            "en": "Prefix",
            "zh": "前缀",
            "ja": "接頭辞"
          },
          {
            "en": "Suffix",
            "zh": "后缀",
            "ja": "接尾辞"
          }
        ]
      },
      {
        "type": "enum",
        "name": "process",
        "label": {
          "en": "Process",
          "zh": "操作",
          "ja": "処理"
        },
        "defaultValue": {
          "en": "Add",
          "zh": "添加",
          "ja": "追加"
        },
        "options": [
          {
            "en": "Add",
            "zh": "添加",
            "ja": "追加"
          },
          {
            "en": "Remove",
            "zh": "删除",
            "ja": "削除"
          }
        ]
      },
      {
        "type": "string",
        "name": "text",
        "label": {
          "en": "Text to add/remove",
          "zh": "要添加/删除的文本",
          "ja": "追加/削除するテキスト"
        },
        "defaultValue": "",
        "optional": false
      }
    ]
  },
  "scriptFiles": [
    "batch-edit-prefix-suffix.js"
  ]
}
